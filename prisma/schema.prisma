generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  name      String
  rating    Int
  review    String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("reviews")
}

model Bug {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String
  title       String
  description String
  type        String
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("bugs")
}

model Download {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  version   String
  platform  String
  country   String?  // Optional for backward compatibility
  createdAt DateTime @default(now())

  @@map("downloads")
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model PlatformConfig {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  platform    String   @unique // 'windows' or 'linux'
  version     String
  downloadUrl String
  note        String?  // Optional update note
  updatedAt   DateTime @updatedAt

  @@map("platform_configs")
}

model License {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  email           String
  keyHash         String    @unique
  encryptedKey    String
  plan            String    // 'PLUS' or 'PRO'
  status          String    @default("active")
  usageCount      Int       @default(0)
  maxActivations  Int       @default(1)
  reminderSent    Boolean   @default(false)
  keyViewed       Boolean   @default(false)
  stripeSessionId String?   @unique
  createdAt       DateTime  @default(now())
  expiresAt       DateTime?

  @@map("licenses")
}

model Ad {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  type        String   // 'IMAGE', 'VIDEO', 'LINK'
  targetTier  String   // 'FREEMIUM', 'PLUS'
  contentUrl  String?  // URL for the image or video file
  linkUrl     String   // Where the ad clicks to
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("ads")
}